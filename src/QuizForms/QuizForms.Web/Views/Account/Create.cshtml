@using QuizForms.Web.Models.Account;
@model CreateAccountModel;
@{
    ViewData["Title"] = "Account aanmaken";
}

<h1>Account aanmaken</h1>
<form asp-controller="Account" asp-action="Create" method="post">
    <label for="Username">Gebruikersnaam</label>
    <input asp-for="Username" />
    <span asp-validation-for="Username"></span>
    <label for="Message">Wachtwoord</label>
    <input asp-for="Password" />
    <span asp-validation-for="Password"></span>
    <br><br>
    <input type="submit" value="Aanmaken" formmethod="post">
</form>